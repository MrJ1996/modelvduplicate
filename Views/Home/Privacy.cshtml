@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="container mt-5">
    <h1 class="privacy-title">@ViewData["Title"]</h1>

    <div class="privacy-content">
        <p>
            This page describes your site's privacy policy. Make sure you include details on how user data is handled, stored, and protected.
        </p>
        <p>
            You can customize this section to inform your users about data collection, cookies, GDPR compliance, and other privacy concerns.
        </p>
    </div>

    <button id="moreInfoBtn" class="btn btn-info mt-3">More Info</button>
</div>

<style>
    .privacy-title {
        color: #2c3e50;
        font-weight: 700;
        margin-bottom: 20px;
    }

    .privacy-content {
        font-size: 1.1rem;
        line-height: 1.6;
        color: #34495e;
        background-color: #ecf0f1;
        padding: 15px;
        border-radius: 8px;
    }

    #moreInfoBtn {
        cursor: pointer;
    }
</style>

<script>
    document.getElementById('moreInfoBtn').addEventListener('click', function() {
        alert('Thank you for showing interest in our privacy policy!');
    });
</script>
